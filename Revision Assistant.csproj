<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Revision_Assistant</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Add these properties -->
    <PublishSingleFile>true</PublishSingleFile>
    <PublishTrimmed>true</PublishTrimmed> <!-- Optional: to reduce size -->
    <SelfContained>true</SelfContained> <!-- Include .NET runtime -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier> <!-- Change to your target OS -->
  </PropertyGroup>

</Project>
